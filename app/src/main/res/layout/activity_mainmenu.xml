<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.bustogoappliction.Mainmenu">

    <ImageView
        android:id="@+id/imagebus"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/bus"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp" />

    <ImageView
        android:id="@+id/imageiconbus"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/a"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/imagebus"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/imageiconroad" />

    <ImageView
        android:id="@+id/imageiconroad"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/b"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/imagebus"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/imageiconbus" />

    <ImageView
        android:id="@+id/imageicongo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/c"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/imageiconbus"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/imageiconnew" />

    <ImageView
        android:id="@+id/imageiconnew"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/d"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/imageiconroad"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/imageicongo" />
</android.support.constraint.ConstraintLayout>
