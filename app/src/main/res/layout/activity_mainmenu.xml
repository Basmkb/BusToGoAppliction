<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.bustogoappliction.Mainmenu"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">


    <ImageView
        android:id="@+id/imva"
        android:layout_width="377dp"
        android:layout_height="123dp"
        android:layout_marginTop="16dp"
        android:background="#9bd6d4"
        android:onClick="imva"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/busonenikekek" />

    <ImageView
        android:id="@+id/imvb"
        android:layout_width="378dp"
        android:layout_height="142dp"
        android:layout_marginTop="7dp"
        android:background="#ff9010"
        android:onClick="imvb"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imva"
        app:srcCompat="@drawable/roadorforfun" />

    <ImageView
        android:id="@+id/imvc"
        android:layout_width="368dp"
        android:layout_height="133dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="#abd938"
        android:onClick="imvc"
        app:layout_constraintBottom_toTopOf="@+id/imvd"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imvb"
        app:layout_constraintVertical_bias="0.166"
        app:srcCompat="@drawable/uiui" />

    <ImageView
        android:id="@+id/imvd"
        android:layout_width="373dp"
        android:layout_height="116dp"
        android:layout_marginBottom="8dp"
        android:background="#a9aba2"
        android:onClick="imvd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/newsone"
        tools:layout_editor_absoluteY="430dp" />
</android.support.constraint.ConstraintLayout>
